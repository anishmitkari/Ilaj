<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_white_bg"
    tools:context="com.userdoctor.ui.common.activity.Doctors.Home_Doctor_list.Activity.Activity_Dr_Time_booking">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Dr. booking"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_weight="0.2"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:id="@+id/ll_sam1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardElevation="9dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <LinearLayout
                            android:id="@+id/ll_sample"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:layout_toRightOf="@+id/dr_image"
                            android:orientation="vertical"
                            android:padding="@dimen/_10sdp">

                            <TextView
                                android:id="@+id/dr_name"
                                android:layout_marginLeft="@dimen/_3sdp"
                                style="@style/textview14black_bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:text="Dr. Hanimuddin"
                                android:textStyle="bold" />


                            <TextView
                                android:id="@+id/specialist"
                                android:layout_marginLeft="@dimen/_3sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:text="Bhardwaj clinic, indore"
                                android:textSize="@dimen/_14sdp"
                                android:textStyle="normal" />


                            <!--<TextView-->
                            <!--style="@style/textview12gray"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:layout_gravity="center_vertical"-->
                            <!--android:layout_marginTop="@dimen/_5sdp"-->
                            <!--android:gravity="center_vertical"-->
                            <!--android:text="Book AppointMent"-->
                            <!--android:textStyle="bold" />-->

                        </LinearLayout>

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/dr_image"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_home_doc" />


                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>




            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_margin="5dp"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="9dp">

                <RelativeLayout
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <LinearLayout
                        android:id="@+id/ll_same"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="vertical"
                        android:padding="@dimen/_5sdp">

                        <TextView
                            android:id="@+id/txtdate"
                            android:layout_marginLeft="@dimen/_3sdp"
                            style="@style/textview12black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:textAlignment="center"
                            android:text="Thu, 9 Oct"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/time"
                            android:layout_marginLeft="@dimen/_3sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:text="7 hour 15 minute"
                            android:textAlignment="center"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textStyle="normal" />


                    </LinearLayout>


                </RelativeLayout>
            </androidx.cardview.widget.CardView>









            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:orientation="vertical">

                <RadioGroup
                    android:id="@+id/bookgrup"
                    android:layout_margin="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:layout_weight="0.5"
                        android:id="@+id/rb_myselfbook"
                        android:text="Book for myself"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </RadioButton>



                    <RadioButton
                        android:layout_weight="0.5"
                        android:id="@+id/rb_bookfamily"
                        android:text="Book family member"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </RadioButton>


                </RadioGroup>


                <LinearLayout
                    android:layout_margin="@dimen/_10sdp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <EditText
                        android:windowSoftInputMode="stateAlwaysVisible"
                        android:overScrollMode="always"
                        android:scrollbarStyle="insideInset"
                        android:scrollbars="vertical"
                        android:singleLine="false"
                        android:isScrollContainer="true"
                        android:focusable="true"


                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_edittext"
                        android:drawableLeft="@drawable/ic_user"
                        android:drawablePadding="@dimen/_10sdp"
                        android:hint="Name"
                        android:inputType="textEmailAddress"
                        android:padding="@dimen/_10sdp" />


                    <EditText
                        android:windowSoftInputMode="stateAlwaysVisible"
                        android:overScrollMode="always"
                        android:scrollbarStyle="insideInset"
                        android:scrollbars="vertical"
                        android:singleLine="false"
                        android:isScrollContainer="true"
                        android:focusable="true"
                        android:maxLength="10"
                        android:id="@+id/mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/shape_edittext"
                        android:drawableLeft="@drawable/ic_phone"
                        android:drawablePadding="@dimen/_10sdp"
                        android:hint="Mobile"
                        android:inputType="number"
                        android:padding="@dimen/_10sdp" />


                    <EditText
                        android:windowSoftInputMode="stateAlwaysVisible"
                        android:overScrollMode="always"
                        android:scrollbarStyle="insideInset"
                        android:scrollbars="vertical"
                        android:singleLine="false"
                        android:isScrollContainer="true"
                        android:focusable="true"
                        android:id="@+id/address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/shape_edittext"
                        android:drawableLeft="@drawable/ic_add_location_grey_24dp"
                        android:drawablePadding="@dimen/_10sdp"
                        android:hint="Address"
                        android:inputType="textEmailAddress"
                        android:padding="@dimen/_10sdp" />


                    <EditText
                        android:windowSoftInputMode="stateAlwaysVisible"
                        android:overScrollMode="always"
                        android:scrollbarStyle="insideInset"
                        android:scrollbars="vertical"
                        android:singleLine="false"
                        android:isScrollContainer="true"
                        android:focusable="true"
                        android:id="@+id/age"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/shape_edittext"
                        android:drawableLeft="@drawable/ic_user"
                        android:drawablePadding="@dimen/_10sdp"
                        android:hint="Age"
                        android:maxLength="2"
                        android:inputType="number"
                        android:padding="@dimen/_10sdp" />




                    <EditText
                        android:visibility="gone"
                        android:windowSoftInputMode="stateAlwaysVisible"
                        android:overScrollMode="always"
                        android:scrollbarStyle="insideInset"
                        android:scrollbars="vertical"
                        android:singleLine="false"
                        android:isScrollContainer="true"
                        android:focusable="false"
                        android:id="@+id/visit_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/shape_edittext"
                        android:drawableLeft="@drawable/ic_user"
                        android:drawablePadding="@dimen/_10sdp"
                        android:hint="Visit Time"
                        android:padding="@dimen/_10sdp"
                        />






                    <RadioGroup
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:layout_weight="0.5"
                            android:id="@+id/female"
                            android:text="Female"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </RadioButton>



                        <RadioButton
                            android:layout_weight="0.5"
                            android:id="@+id/male"
                            android:text="Male"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </RadioButton>


                    </RadioGroup>





                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="By booking appoint you agree the T&amp;C"
                android:textSize="@dimen/_12sdp"
                android:textStyle="normal" />




        </LinearLayout>





    <LinearLayout
            android:id="@+id/ll_confirm_done"
            android:layout_margin="@dimen/_10sdp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="0.8"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_dr_spec_book_now"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/btn_accept_new_bg"
                android:text="Confirm"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textSize="@dimen/_14sdp" />

        </LinearLayout>

    </LinearLayout>





    </ScrollView>




</LinearLayout>