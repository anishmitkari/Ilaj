<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
       android:background="@color/light_white"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/ll_doc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_90sdp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="5dp"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="20dp">

            <RelativeLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp">

                <LinearLayout
                    android:layout_gravity="center"
                    android:gravity="center"

                    android:foregroundGravity="center"
                    android:id="@+id/ll_appointment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_toLeftOf="@+id/iv_appointment"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/_10sdp">

                    <TextView

                        style="@style/textview14black_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                       android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Home Doctor"
                        android:textStyle="bold" />


                    <TextView
                        android:layout_gravity="center"
                        android:gravity="center"
                        style="@style/textview12gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="@dimen/_5sdp"

                        android:text="Book AppointMent threpist and homeopathy ilax "
                        android:textStyle="bold" />

                </LinearLayout>


            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

