<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_white"
    android:orientation="vertical"
    android:scrollbars="none">





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardElevation="@dimen/_2sdp"
                    app:contentPadding="@dimen/_10sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:orientation="vertical">


                        <LinearLayout
                            android:id="@+id/linearlayout"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">




                            <LinearLayout
                                android:layout_gravity="center_vertical"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_80sdp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:src="@drawable/ic_profile"
                                    app:civ_border_color="@color/white"
                                    app:civ_border_width="@dimen/_3sdp" />


                                <TextView
                                    android:textAlignment="center"
                                    android:textStyle="bold"
                                    android:textSize="@dimen/_20sdp"
                                    android:textColor="@color/black"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginTop="10dp"
                                    android:text="John Smith"
                                    tools:ignore="RtlCompat" />

                                <TextView
                                    android:textAlignment="center"
                                    android:textStyle="normal"
                                    android:textColor="@color/darkgray"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginTop="5dp"
                                    android:text="Indore M.P Vijay nagar"
                                    tools:ignore="RtlCompat" />


                            </LinearLayout>

                        </LinearLayout>



                        <TextView
                            android:layout_marginTop="@dimen/_5sdp"
                            style="@style/textview12black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_location"
                            android:drawablePadding="@dimen/_5sdp"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/_5sdp"
                            android:singleLine="true"
                            android:text="Bombey hospital indore" />

                        <TextView
                            style="@style/textview12black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:drawableLeft="@drawable/ic_location"
                            android:drawablePadding="@dimen/_5sdp"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/_3sdp"
                            android:singleLine="true"
                            android:text="15 km" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RatingBar
                                android:id="@+id/ratingBar"
                                style="@style/Widget.AppCompat.RatingBar.Small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/_3sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:numStars="5"
                                android:progressTint="@color/orange"
                                android:rating="4" />

                            <TextView
                                style="@style/textview12black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:gravity="center"
                                android:text="4 Ratting" />
                        </LinearLayout>

                        <TextView
                            style="@style/textview12green_bold"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:drawablePadding="@dimen/_5sdp"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/_3sdp"
                            android:singleLine="true"
                            android:text="Consulting fee: 100 Usd" />

                    </LinearLayout>



                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="8dp"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardElevation="@dimen/_10sdp"
                    app:contentPadding="@dimen/_10sdp">


                    <LinearLayout
                        android:id="@+id/ll_personalInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            style="@style/textview12black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_user1"
                            android:drawableRight="@drawable/ic_next_gray"
                            android:drawablePadding="@dimen/_5sdp"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/_5sdp"
                            android:singleLine="true"
                            android:text="@string/personal_information" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="8dp"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardElevation="@dimen/_10sdp"
                    app:contentPadding="@dimen/_10sdp">


                    <LinearLayout
                        android:id="@+id/ll_ratting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            style="@style/textview12black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_star"
                            android:drawableRight="@drawable/ic_next_gray"
                            android:drawablePadding="@dimen/_5sdp"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/_5sdp"
                            android:singleLine="true"
                            android:text="@string/ratting_reviews" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="8dp"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardElevation="@dimen/_10sdp"
                    app:contentPadding="@dimen/_10sdp">


                    <LinearLayout
                        android:id="@+id/ll_timing"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            style="@style/textview12black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_star"
                            android:drawableRight="@drawable/ic_next_gray"
                            android:drawablePadding="@dimen/_5sdp"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/_5sdp"
                            android:singleLine="true"
                            android:text="Working timing" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_margin="@dimen/_10sdp"
                        android:weightSum="1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_margin="@dimen/_5sdp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_weight="0.5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35sdp"
                                android:background="@drawable/btn_cancel_new_bg"
                                android:text="Contact us"
                                android:textAllCaps="false"
                                android:textColor="@color/colorPrimaryDark"
                                style="@style/textview12black"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_margin="@dimen/_5sdp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_weight="0.5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <Button
                                android:id="@+id/btn_book_clinic"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35sdp"
                                android:background="@drawable/btn_accept_new_bg"
                                android:text="Book appointment"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="14dp" />

                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>


            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/_5sdp"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_back" />





        </androidx.cardview.widget.CardView>
        </LinearLayout>

</LinearLayout>