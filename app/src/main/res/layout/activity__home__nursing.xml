<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.common.activity.OTHER_Activity.Activity_More_Dr">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Lab at Home"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </RelativeLayout>

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:background="@color/light_white_bg"
                android:layout_margin="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="@dimen/_5sdp"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="@dimen/_4sdp"
                >

                <SearchView
                    android:id="@+id/search_hint"
                    android:background="@null"
                    android:backgroundTint="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:queryHint="Search doctors, clinics, specialities"
                    android:queryHint="Search doctors, clinics, specialities"
                    app:defaultQueryHint="Search doctors, clinics, specialities"
                    android:autofillHints="Search doctors, clinics, specialities"
                    android:iconifiedByDefault="false"
                    app:iconifiedByDefault="false"
                    />

            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:weightSum="2"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">



                <TextView

                    android:layout_weight="1"
                    style="@style/textview14black_bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:padding="@dimen/_10sdp"
                    android:text="Cardiovascular "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/book_now"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:textColor="@color/txt_color"
                    android:textSize="@dimen/_12sdp"
                    android:padding="@dimen/_10sdp"
                    android:text="Book Now"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">


                <androidx.recyclerview.widget.RecyclerView
                    android:padding="10dp"
                    android:id="@+id/recycler_view"
                    android:layout_marginTop="15dp"
                    android:scrollbars="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </androidx.recyclerview.widget.RecyclerView>


                <RelativeLayout

                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">



                    <TextView
                        android:id="@+id/tetx2"
                        style="@style/textview14black_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="@dimen/_10sdp"
                        android:text="Gastroenterology "
                        android:textStyle="bold" />





                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="textEnd"
                        android:textColor="@color/txt_color"
                        android:textSize="@dimen/_12sdp"
                        android:padding="@dimen/_10sdp"
                        android:text="Book Now "
                        android:textStyle="bold" />


                </RelativeLayout>





                <androidx.recyclerview.widget.RecyclerView
                    android:padding="10dp"
                    android:id="@+id/recycler_view2"
                    android:layout_marginTop="15dp"
                    android:scrollbars="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </androidx.recyclerview.widget.RecyclerView>





                <RelativeLayout

                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">



                    <TextView
                        android:id="@+id/tetx1"
                        style="@style/textview14black_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="@dimen/_10sdp"
                        android:text="Gerontological "
                        android:textStyle="bold" />





                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="textEnd"
                        android:textColor="@color/txt_color"
                        android:textSize="@dimen/_12sdp"
                        android:padding="@dimen/_10sdp"
                        android:text="Book Now "
                        android:textStyle="bold" />

                </RelativeLayout>




                <androidx.recyclerview.widget.RecyclerView
                    android:padding="10dp"
                    android:id="@+id/recycler_view3"
                    android:layout_marginTop="15dp"
                    android:scrollbars="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </androidx.recyclerview.widget.RecyclerView>







                <RelativeLayout

                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">



                    <TextView
                        android:id="@+id/tetx5"
                        style="@style/textview14black_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="@dimen/_10sdp"
                        android:text="Hospice Hospice Care  "
                        android:textStyle="bold" />





                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="textEnd"
                        android:textColor="@color/txt_color"
                        android:textSize="@dimen/_12sdp"
                        android:padding="@dimen/_10sdp"
                        android:text="Book Now "
                        android:textStyle="bold" />

                </RelativeLayout>




                <androidx.recyclerview.widget.RecyclerView
                    android:padding="10dp"
                    android:layout_marginTop="15dp"
                    android:scrollbars="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </androidx.recyclerview.widget.RecyclerView>













            </LinearLayout>






        </LinearLayout>



    </ScrollView>
</LinearLayout>