<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white_color"
    android:orientation="vertical"
    android:scrollbars="none"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.common.activity.Home_Activity.ActivityHome"
    tools:showIn="@layout/app_bar_activity_home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:id="@+id/ll_doc1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_emergency_dr_book"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    app:cardBackgroundColor="#31e7ba"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:cardElevation="9dp">

                    <RelativeLayout
                        android:layout_width="187dp"
                        android:layout_height="129dp"
                        android:layout_margin="@dimen/_2sdp">

                        <LinearLayout
                            android:id="@+id/ll_appointment1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:layout_toRightOf="@+id/iv_appointment1"
                            android:orientation="vertical"
                            >

                            <TextView
                                android:padding="@dimen/_5sdp"
                               android:textSize="@dimen/_12sdp"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:text="Emergency booking"
                                android:textStyle="bold" />


                            <TextView
                                android:textSize="@dimen/_10sdp"
                                android:textColor="@color/white"
                                android:padding="@dimen/_5sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:gravity="center_vertical"
                                android:text="Find doctor for emergency"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/iv_appointment1"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_70sdp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:padding="@dimen/_5sdp"
                            android:scaleType="fitXY"
                            android:src="@drawable/doc_img" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_clinic_list1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"

                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_ambulance_book"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_marginRight="@dimen/_4sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    app:cardBackgroundColor="#fe7c7c"

                    app:cardCornerRadius="@dimen/_5sdp"
                    app:cardElevation="@dimen/_10sdp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_2sdp">

                        <LinearLayout
                            android:id="@+id/ll_clinic1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_toLeftOf="@+id/iv_clinic1"
                            android:orientation="vertical"
                            >

                            <TextView
                                android:padding="@dimen/_5sdp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp"
                                 android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:text="Ambulance service"
                                android:textStyle="bold" />


                            <TextView
                                android:textSize="@dimen/_10sdp"
                                android:textColor="@color/white"
                                android:padding="@dimen/_5sdp"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="@dimen/_2sdp"
                                android:gravity="center_vertical"
                                android:text="Find ambulance for emergency"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/iv_clinic1"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_70sdp"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:padding="@dimen/_5sdp"
                            android:scaleType="fitXY"
                            android:src="@drawable/ambul_img" />
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>


        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:gravity="center_vertical"
            android:text="@string/doctor_s"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:id="@+id/ll_doc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_90sdp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    app:cardBackgroundColor="@color/card_doc_bg_color"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:cardElevation="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp">

                        <LinearLayout
                            android:id="@+id/ll_appointment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:layout_toLeftOf="@+id/iv_appointment"
                            android:orientation="vertical">

                            <TextView
                                style="@style/textview14black_bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:padding="@dimen/_5sdp"
                                android:text="Home Doctor"
                                android:textSize="@dimen/_12sdp"
                                android:textStyle="bold" />


                            <TextView
                                style="@style/textview12gray"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:gravity="center_vertical"
                                android:padding="@dimen/_5sdp"
                                android:text="Book AppointMent"

                                android:textColor="@color/white"
                                android:textSize="@dimen/_10sdp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/iv_appointment"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_70sdp"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:padding="@dimen/_5sdp"
                            android:scaleType="fitXY"
                            android:src="@drawable/home_nurse_img" />
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_clinic_list"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_90sdp"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    app:cardBackgroundColor="@color/card_doc_bg_color"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:cardElevation="@dimen/_10sdp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp">

                        <LinearLayout
                            android:id="@+id/ll_clinic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:layout_toLeftOf="@+id/iv_clinic"
                            android:orientation="vertical"
                            android:paddingTop="@dimen/_10sdp">

                            <TextView
                                style="@style/textview14black_bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:padding="@dimen/_5sdp"
                                android:text="Clinic"

                                android:textSize="@dimen/_12sdp"
                                android:textStyle="bold" />


                            <TextView
                                style="@style/textview12gray"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:gravity="center_vertical"
                                android:padding="@dimen/_5sdp"
                                android:text="Book AppointMent"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_10sdp"

                                android:textStyle="bold" />

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/iv_clinic"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:padding="@dimen/_5sdp"
                            android:scaleType="fitXY"
                            android:src="@drawable/doc_testing_icon" />
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:gravity="center_vertical"
            android:text="Find Doctor's in top specialist"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           >

        </androidx.recyclerview.widget.RecyclerView>

        <TextView
            android:id="@+id/tv_find_more_dr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_10sdp"
            android:text="view more"
            android:textAlignment="textEnd"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold" />

        <TextView
             android:textColor="@color/black"
            android:layout_width="match_parent"
           android:layout_marginLeft="@dimen/_10sdp"
            android:layout_height="wrap_content"
             android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="Lab/Nursing"
            android:layout_marginBottom="@dimen/_5sdp"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold" />

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/ll_sam1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_sample_collect"
                        android:layout_width="@dimen/_160sdp"
                        android:layout_height="@dimen/_90sdp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        app:cardBackgroundColor="@color/card_lab_at_home_bg_color"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:cardElevation="9dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:id="@+id/ll_sample"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerInParent="true"
                                android:layout_toLeftOf="@+id/iv_sample"
                                android:orientation="vertical"
                                android:paddingTop="@dimen/_10sdp">

                                <TextView
                                     android:textSize="@dimen/_12sdp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/_3sdp"
                                    android:gravity="center_vertical"
                                    android:text="Lab at Home"
                                    android:textColor="@color/white"
                                    android:padding="@dimen/_5sdp"
                                    android:textStyle="bold" />


                            </LinearLayout>

                            <ImageView
                                android:id="@+id/iv_sample"
                                android:layout_width="@dimen/_70sdp"
                                android:layout_height="@dimen/_70sdp"
                                android:layout_alignParentRight="true"
                                android:layout_centerInParent="true"
                                android:padding="@dimen/_5sdp"
                                android:scaleType="fitXY"
                                android:src="@drawable/lab" />

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/home_nursing"
                        android:layout_width="@dimen/_160sdp"
                        android:layout_height="@dimen/_90sdp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="@dimen/_10sdp"

                        app:cardBackgroundColor="@color/card_lab_at_home_bg_color"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:cardElevation="9dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:id="@+id/ll_firstaid"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerInParent="true"
                                android:layout_toLeftOf="@+id/iv_first_aid"
                                android:orientation="vertical"
                                android:paddingTop="@dimen/_10sdp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="50dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/_3sdp"
                                    android:gravity="center_vertical"

                                    android:padding="@dimen/_5sdp"
                                    android:text="@string/home_nursing"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_12sdp"
                                    android:textStyle="bold" />


                            </LinearLayout>

                            <ImageView
                                android:id="@+id/iv_first_aid"
                                android:layout_width="@dimen/_70sdp"
                                android:layout_height="@dimen/_70sdp"
                                android:layout_alignParentRight="true"
                                android:layout_centerInParent="true"
                                android:padding="@dimen/_5sdp"
                                android:scaleType="fitXY"
                                android:src="@drawable/nurse_1" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_vacination"
                        android:layout_width="@dimen/_160sdp"
                        android:layout_height="@dimen/_90sdp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="@dimen/_10sdp"

                        app:cardBackgroundColor="@color/card_lab_at_home_bg_color"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:cardElevation="9dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:id="@+id/ll_home_vacum"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerInParent="true"
                                android:layout_toLeftOf="@+id/iv_home_vacum"
                                android:orientation="vertical"
                                android:paddingTop="@dimen/_10sdp">

                                <TextView
                                    android:textSize="@dimen/_12sdp"
                                    android:textColor="@color/white"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/_3sdp"
                                    android:padding="@dimen/_5sdp"
                                    android:gravity="center_vertical"
                                    android:text="@string/home_vaccination"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <ImageView
                                android:id="@+id/iv_home_vacum"
                                android:layout_width="@dimen/_70sdp"
                                android:layout_height="@dimen/_70sdp"
                                android:layout_alignParentRight="true"
                                android:layout_centerInParent="true"
                                android:padding="@dimen/_5sdp"
                                android:scaleType="fitXY"
                                android:src="@drawable/vaccine_icon" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_270sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:scaleType="fitXY"
                    android:src="@drawable/offer_benner1" />

                <ImageView
                    android:layout_width="@dimen/_270sdp"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/offer_benner2" />

                <ImageView
                    android:layout_width="@dimen/_270sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:scaleType="fitXY"
                    android:src="@drawable/offer_benner3" />
            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:textSize="@dimen/_14sdp"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:padding="@dimen/_5sdp"
             android:layout_marginLeft="@dimen/_5sdp"
            android:text="@string/medicine_s"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:id="@+id/ll_delivery"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_90sdp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="@dimen/_10sdp"

                    app:cardBackgroundColor="@color/card_medicine_bg_color"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardElevation="9dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:layout_toLeftOf="@+id/iv_deliver"
                            android:orientation="vertical"
                            android:paddingTop="@dimen/_10sdp">

                            <TextView

                                android:textSize="@dimen/_12sdp"
                                android:padding="@dimen/_5sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:gravity="center_vertical"
                                android:text="Deliver Drug Prescription"
                                android:textStyle="bold" />


                        </LinearLayout>

                        <ImageView
                            android:id="@+id/iv_deliver"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:padding="@dimen/_5sdp"
                            android:scaleType="fitXY"
                            android:src="@drawable/drug_boy" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_90sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_10sdp"

                    app:cardBackgroundColor="@color/card_medicine_bg_color"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardElevation="@dimen/_10sdp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/ll_drug"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:layout_toLeftOf="@+id/iv_drug"
                            android:orientation="vertical"
                            android:paddingTop="@dimen/_10sdp">

                            <TextView
                               android:textSize="@dimen/_12sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:gravity="center_vertical"
                                android:text="@string/find_a_drug"
                                android:padding="@dimen/_5sdp"
                                android:textStyle="bold" />


                        </LinearLayout>

                        <ImageView
                            android:id="@+id/iv_drug"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:padding="@dimen/_5sdp"
                            android:scaleType="fitXY"
                            android:src="@drawable/drug" />
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>