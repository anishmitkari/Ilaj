<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_10sdp"
                app:cardUseCompatPadding="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/_5sdp">

                        <TextView
                            android:id="@+id/tv_name"
                            style="@style/textview14blue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:padding="@dimen/_5sdp"
                            android:singleLine="true"
                            android:text="AppointMent Details"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="horizontal"
                            android:padding="@dimen/_10sdp"
                            android:weightSum="1">

                            <TextView
                                style="@style/textview12black"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".5"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/_5sdp"
                                android:singleLine="true"
                                android:text="12-06-2009" />

                            <TextView
                                style="@style/textview12black"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".5"
                                android:gravity="right"
                                android:paddingLeft="@dimen/_5sdp"
                                android:singleLine="true"
                                android:text="02:30pm" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <TextView
                                style="@style/textview12black"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".5"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/_5sdp"
                                android:singleLine="true"
                                android:text="Blood Test" />

                            <TextView
                                style="@style/textview12green_bold"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".5"
                                android:gravity="right"
                                android:paddingLeft="@dimen/_5sdp"
                                android:singleLine="true"
                                android:text="100$" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <TextView
                                style="@style/textview12black"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".5"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/_5sdp"
                                android:singleLine="true"
                                android:text="Full Body CheckUp" />

                            <TextView
                                style="@style/textview12green_bold"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".5"
                                android:gravity="right"
                                android:paddingLeft="@dimen/_5sdp"
                                android:singleLine="true"
                                android:text="100$" />
                        </LinearLayout>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@color/gray" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <TextView
                                style="@style/textview14black_bold"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".5"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/_5sdp"
                                android:singleLine="true"
                                android:text="Total" />

                            <TextView
                                style="@style/textview12green_bold"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".5"
                                android:gravity="right"
                                android:paddingLeft="@dimen/_5sdp"
                                android:singleLine="true"
                                android:text="100$" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_20sdp"
                            android:padding="@dimen/_10sdp"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <TextView
                                android:id="@+id/tv_cancle"
                                style="@style/textview12white"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_gravity="center"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:layout_weight=".5"
                                android:background="@drawable/btn_bg"
                                android:gravity="center"
                                android:text="Cancle" />

                            <TextView
                                android:id="@+id/tv_done"
                                style="@style/textview12white"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_gravity="center"
                                android:layout_weight=".5"
                                android:background="@drawable/btn_bg"
                                android:gravity="center"
                                android:text="Done" />

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>