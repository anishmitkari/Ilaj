<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:id="@+id/ll_sam1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardElevation="9dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <LinearLayout
                            android:weightSum="2"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_gravity="center"
                                android:layout_weight="1.4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">


                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/iv_sample"
                                    android:layout_gravity="center"
                                    android:layout_width="@dimen/_50sdp"
                                    android:layout_height="@dimen/_50sdp"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/ic_home_doc" />


                                <TextView
                                    android:layout_marginTop="@dimen/_20sdp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="View Detail"
                                    android:id="@+id/viewdetail"
                                    android:textAllCaps="false"
                                    android:layout_gravity="center"
                                    android:textStyle="bold"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:paddingLeft="@dimen/_10sdp"
                                    android:textSize="12dp" />



                            </LinearLayout>

                            <LinearLayout
                                android:layout_weight=".6"
                                android:id="@+id/ll_sample"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerInParent="true"
                                android:layout_toRightOf="@+id/iv_sample"
                                android:orientation="vertical"
                                android:padding="@dimen/_10sdp">

                                <TextView
                                    android:layout_marginLeft="@dimen/_3sdp"
                                    android:textSize="@dimen/_18sdp"
                                    android:textColor="@color/black"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_vertical"
                                    android:text="Dr. Hanimuddin"
                                    android:id="@+id/dr_name"
                                    android:textStyle="bold" />


                                <TextView
                                    android:layout_margin="@dimen/_3sdp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_vertical"
                                    android:text="Bhardwaj clinic"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:id="@+id/hospitalname"
                                    android:textSize="@dimen/_14sdp"
                                    android:textStyle="bold" />


                                <TextView
                                    android:layout_marginLeft="@dimen/_3sdp"
                                    style="@style/textview12gray"
                                    android:textColor="@color/light_black"
                                    android:id="@+id/date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_vertical"
                                    android:text="Thu, 9 Oct 5.00 pm"
                                    android:textStyle="bold" />




                                <TextView
                                    android:textColor="@color/light_black"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    style="@style/textview12gray"
                                    android:layout_marginLeft="@dimen/_3sdp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_vertical"
                                    android:id="@+id/doctor_id"
                                    android:text="Doctor Id-2672919"
                                    android:textStyle="bold" />




                                <TextView
                                    android:textColor="@color/light_black"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_marginLeft="@dimen/_3sdp"
                                    style="@style/textview12gray"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_vertical"
                                    android:text="Sample collect"
                                    android:id="@+id/sample"
                                    android:textStyle="bold" />
                                <TextView
                                    android:textColor="@color/light_black"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_marginLeft="@dimen/_3sdp"
                                    style="@style/textview12gray"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_vertical"
                                    android:id="@+id/address"
                                    android:text="Address-vijay nagar"
                                    android:textStyle="bold" />




                                <TextView
                                    android:textColor="@color/light_black"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_marginLeft="@dimen/_3sdp"
                                    style="@style/textview12gray"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_vertical"
                                    android:id="@+id/booking_id"
                                    android:text="booking id"
                                    android:textStyle="bold" />
                            </LinearLayout>


                        </LinearLayout>


                        <LinearLayout
                            android:weightSum="3"
                            android:gravity="bottom"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_20sdp"
                            >

                            <LinearLayout
                                android:layout_margin="@dimen/_10sdp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:id="@+id/linear_upload_reciept"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <Button
                                    android:visibility="gone"
                                    android:id="@+id/upload_receipt"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_30sdp"
                                    android:background="@drawable/btn_accept_new_bg2"
                                    android:paddingLeft="@dimen/_10sdp"
                                    android:text="@string/upload_reciept"
                                    android:textAllCaps="false"
                                    android:textColor="@color/white"
                                    android:textSize="12dp" />

                            </LinearLayout>

                            <LinearLayout

                                android:layout_margin="@dimen/_10sdp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <Button

                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_30sdp"
                                    android:background="@drawable/btn_accept_new_bg2"
                                    android:text="Message"
                                    android:textAllCaps="false"
                                     android:id="@+id/msg"
                                    android:paddingLeft="@dimen/_10sdp"
                                    android:textColor="@color/white"
                                    android:drawableLeft="@drawable/ic_message"
                                    android:textSize="12dp" />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_margin="@dimen/_10sdp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_30sdp"
                                    android:background="@drawable/btn_accept_new_bg2"
                                    android:text="Status"
                                    android:id="@+id/status"
                                    android:textAllCaps="false"
                                    android:textColor="@color/white"
                                    android:paddingLeft="@dimen/_10sdp"
                                    android:textSize="12dp" />

                            </LinearLayout>

                        </LinearLayout>



                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>





        </LinearLayout>


    </ScrollView>

</LinearLayout>