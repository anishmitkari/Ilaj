<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_white"
    android:gravity="center"
    android:orientation="vertical"
    android:scrollbars="none"
    tools:context="com.userdoctor.ui.common.activity.Doctors.Home_Doctor_list.Activity.ActivityDrDetail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_10sdp">

        <RelativeLayout
            android:id="@+id/rel_first"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="310dp"
                android:background="@drawable/doctorimage"
                android:orientation="vertical">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_190sdp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardUseCompatPadding="false"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardElevation="@dimen/_5sdp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_50sdp"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center"
                                android:id="@+id/img_profile"
                                android:src="@drawable/ic_profile"
                                app:civ_border_color="@color/white"
                                app:civ_border_width="@dimen/_3sdp" />

                            <TextView
                                android:textStyle="bold"
                                android:textSize="@dimen/_24sdp"
                                android:textColor="@color/colorPrimaryDark"
                                android:id="@+id/mTextName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="2dp"
                                android:text="" />

                            <TextView
                                android:textColor="@color/black"
                                android:textSize="@dimen/_16sdp"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="2dp"
                                android:id="@+id/mTextSpecialist"
                                android:text="" />

                        </LinearLayout>

                        <TextView
                            android:layout_marginTop="@dimen/_20sdp"
                            android:id="@+id/hospital_name"
                            style="@style/textview12black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_location"
                            android:drawablePadding="@dimen/_5sdp"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/_5sdp"
                            android:singleLine="true"
                            android:text="" />

                        <TextView
                            android:id="@+id/mTextDistance"
                            style="@style/textview12black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:drawableLeft="@drawable/ic_location"
                            android:drawablePadding="@dimen/_5sdp"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/_3sdp"
                            android:singleLine="true"
                            android:text="" />



                        <TextView
                            android:id="@+id/mTextFee"
                            style="@style/textview12black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:drawableLeft="@drawable/ic_location"
                            android:drawablePadding="@dimen/_5sdp"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/_3sdp"
                            android:singleLine="true"
                            android:text="" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RatingBar
                                android:id="@+id/ratingBar"
                                style="@style/Widget.AppCompat.RatingBar.Small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/_3sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:numStars="5"
                                android:progressTint="@color/orange"
                                android:rating="3" />

                            <TextView
                                android:id="@+id/mTextRating"
                                style="@style/textview12black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:gravity="center"
                                android:text="4 " />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="@dimen/_10sdp"
                            android:id="@+id/ll_personalInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:paddingBottom="@dimen/_10sdp"
                                android:paddingTop="@dimen/_10sdp"
                                style="@style/textview12black"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/ic_user"
                                android:drawableRight="@drawable/ic_next_gray"
                                android:drawablePadding="@dimen/_5sdp"
                                android:gravity="center_vertical"
                                android:singleLine="true"
                                android:text="@string/personal_information" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_ratting"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:paddingBottom="@dimen/_10sdp"
                                android:paddingTop="@dimen/_10sdp"
                                style="@style/textview12black"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/star_rating_icon"
                                android:drawableRight="@drawable/ic_next_gray"
                                android:drawablePadding="@dimen/_5sdp"
                                android:gravity="center_vertical"
                                android:singleLine="true"
                                android:text="@string/ratting_reviews" />

                        </LinearLayout>

                        <LinearLayout
                            android:weightSum="1"
                            android:layout_marginBottom="@dimen/_20sdp"
                            android:layout_marginTop="50dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_margin="@dimen/_5sdp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:id="@+id/contact_us"
                                android:layout_weight="0.5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_40sdp"
                                    android:background="@drawable/btn_cancel_new_bg"
                                    android:text="Contact us"
                                    android:id="@+id/call"
                                    android:textAllCaps="false"
                                    android:textColor="@color/red"
                                    style="@style/textview12black"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_margin="@dimen/_5sdp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_weight="0.5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <Button
                                    android:id="@+id/tv_bookAppointMent"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_40sdp"
                                    android:background="@drawable/btn_accept_new_bg"
                                    android:text="Book appointment"
                                    android:textAllCaps="false"
                                    android:textColor="@color/white"
                                    android:textSize="14dp" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/_5sdp"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_back" />

        </RelativeLayout>











    </LinearLayout>
</ScrollView>